.social-bar
	background: rgba(black,.3)
	.menu-icon
		display: none
	&.stuck
		position: fixed
		top: 0
		width: 100%
		z-index: 9999
		.menu-icon
			margin: 22px 0 0 15px
			float: left
			display: block
.social
	float: right
	padding: 15px 0 15px 0
	social(pos)
		background-position: ((pos * -1) * 30px) 0
		&:hover
			background-position: ((pos * -1) * 30px) -30px
	a
		position: relative
		display: block
		width: 32px
		height: 32px
		float: left
		background: transparent url("images/ui/social-icons.png") no-repeat
		background-size: 180px
		&[href*=twitter]
			social(0)
		&[href*=google]
			social(1)
		&[href*=facebook]
			social(2)
		&[href*=github]
			social(3)
		&[href*=stackoverflow]
			social(4)
		&[href*=forum]
			social(5)

		span
			display: none
			position: absolute
			bottom: -25px
			right: 0
			padding: 3px 6px
			background: lb-slate
			color: white
			border-radius: 3px
			font-size: 0.75em
			text-transform: uppercase
			white-space: nowrap
			font-weight: 700
			&:after
				content: " "
				position: absolute
				bottom: 100%
				right: 11px
				width: 0
				height: 0
				border-left: 6px solid transparent
				border-right: 6px solid transparent
				border-bottom: 6px solid lb-slate
		&:hover span
			display: block