article

  /* This takes into account the header when clicking anchor links */
  :target:before
    content ""
    display block
    height header-height
    margin-top - header-height

  .section-marker
    position: absolute
    margin-left: -1em
    width: 1em
    display: block
    visibility: hidden
    text-decoration: none
    font-weight: normal
    text-align: center

  h1:hover > .section-marker, h2:hover > .section-marker, h3:hover > .section-marker, h4:hover > .section-marker, h5:hover > .section-marker
    visibility: visible
    color: inherit
    text-decoration: none

  pre.prettyprint
    background: lb-off-white-dkr
    border: 1px solid lb-light-grey
    padding: 5px 10px
    margin-bottom: 1rem

    code
      background: none
      border: none
      padding: 0
      font-size: 10pt
      line-height: 1
  code
    background: lb-off-white-dkr
    border: 1px solid lb-light-grey
    font-size 0.85em
    padding 0.0625rem 0.3125rem

.breadcrumbs
  font-size: 0.8em

.side-menu
  a:link, a:visited
    font-weight normal

  .current-page
    a:link, a:visited
      font-weight 700

/* Make the search drop down right aligned when the side menu is on the right hand side (ie, ion large screens) */
@media screen and (min-width: 64em)
  .aa-dropdown-menu
    right 0 !important
    left auto !important

/* Algolia styling, see https://community.algolia.com/docsearch/documentation/ */
.algolia-autocomplete
  width 100%

  .algolia-docsearch-suggestion
    border-bottom-color lgm-purple-dkr
  .algolia-docsearch-suggestion--category-header
    background-color lgm-purple
  .algolia-docsearch-suggestion--highlight
    color: lgm-purple
  .algolia-docsearch-suggestion--category-header .algolia-docsearch-suggestion--highlight
    background-color: lgm-purple-ltr-ltr
  .aa-cursor .algolia-docsearch-suggestion--content
    color: lgm-purple-dkr
  .aa-cursor .algolia-docsearch-suggestion
    background: lgm-purple-ltr-ltr

.edit-source
  font-size 1em
  margin-top 40px
  padding-top 10px
  border-top 1px solid lb-light-grey

.side-menu
  .api-docs:link
    display block
    margin 10px 0 20px 0
    font-weight 700
    text-transform uppercase
